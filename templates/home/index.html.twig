{% extends 'base.html.twig' %}

{% block body %}
    <div class="container text-lg-center">
        <table class="table table-striped table-hover table-bordered border-dark">
            <thead>
            <tr>
                <td class="fw-bolder">Nazwa</td>
                <td class="fw-bolder">Ilość</td>
                <td class="fw-bolder">Plik</td>
            </tr>
            </thead>

            {% for a in article %}
                <tbody>
                <td>{{ a.name }}</td>
                <td>{{ a.quantity }}</td>
                <td>{{ a.file }}</td>
                </tbody>
            {% endfor %}

        </table>
    </div>
{% endblock %}
